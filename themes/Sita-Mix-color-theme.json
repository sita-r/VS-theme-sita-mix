{
    "name": "Sita Mix",
    "type": "light",
    "colors": {
        // Editor colours
        "editor.background": "#ffffff",                             // Background of the editor
        "editor.foreground": "#000000",                             // Text colour in the editor    
        
        // Selection Text colours
        "editor.selectionForeground": "#000000",                    // Colour of the selected text
        "editor.selectionBackground": "#dceeff",                    // Background of the selected text  
        "editor.lineHighlightBackground": "#b3dafe1f",              // Background of the line highlight

        "editor.selectionHighlightBackground": "#fffc3afd",         // Soft lavender, semi-opaque
        "editor.wordHighlightBackground": "#646b730b",              // Slightly more opaque lavender
        "editor.wordHighlightTextBackground": "#646b730f",          // Match above
        "editor.wordHighlightBorder": "#0184ff41",                  // Border of the word highlight
        "editor.wordHighlightTextBorder": "#0184ff7a",              // Border of the word highlight text

        "editor.wordHighlightStrongBackground": "#fcffa73c",        // Background of the strong word highlight
        "editor.wordHighlightStrongBorder": "#ff1e009d",            // Border of the strongword highlight
        
        "editor.findMatchBackground": "#e9e634",                    // Background of the find match
        "editor.findMatchHighlightBackground": "#e9e63484",         // Background of the find match highlight
        "editor.hoverHighlightBackground": "#c5e2f9d2",             // Background of the hover highlight
       
        "editorIndentGuide.background1": "#dee4d9",                 // Background of the indent guide
        "editorIndentGuide.activeBackground1": "#ee0505",           // Background of the active indent guide
        "editorWhitespace.foreground": "#ffffff00",                 // Colour of the whitespace characters
       
        "editorCursor.foreground": "#000000",                       // Cursor color

        "textLink.foreground": "#99bcfd",                           // Colour of the text links
        "textLink.activeForeground": "#99bcfd",                     // Colour of the active text

        // Peekview Editor colours (Option F12 on mac)
        "peekViewTitle.background": "#fff70043",                    // Background of the peek view title
        "peekViewTitleDescription.foreground": "#0000007c",         // Text colour of the peek view title description
        "peekViewTitleLabel.foreground": "#1021d9a0",               // Text colour of the peek view title label
        "peekViewEditorStickyScroll.background": "#fbf9c6ef",       // Background of the sticky scroll in the peek view editor

        "peekViewEditor.background": "#fff7001d",                   // Background of the peek view editor
        "peekViewEditorGutter.background": "#fff7001d",             // Background of the peek view editor gutter
        "peekViewEditor.matchHighlightBackground": "#fef600cb",     // Background of the match highlight in the peek view editor
        "peekViewEditor.matchHighlightBorder": "#ff1e0000",         // Border of the match highlight in the peek view editor
        "peekView.border": "#1021d9a0",                             // Border of the peek view
        
        "peekViewResult.background": "#fffb8145",                   // Background of the peek view result
        "peekViewResult.selectionBackground": "#e0f1ffd2",          // Background of the selected peek view result
        "peekViewResult.selectionForeground": "#000000",            // Text colour of the selected peek view result
        "peekViewResult.matchHighlightBackground": "#5b5b5b00",     // Background of the match highlight in the peek view result
        "peekViewResult.lineForeground": "#000000",                 // Text colour of the line in the peek view result
        "peekViewResult.fileForeground": "#ffffff",                 // Text colour of the file in the peek view result
        
        // Hover Widget Colours
        "editorHoverWidget.background": "#faeff8ed",                // Background of the hover widget
        "editorHoverWidget.foreground": "#000000",                  // Text colour of the hover widget

        // Bottom: Panel, terminal, debug console, etc.
        "terminal.background": "#222232",               // Background of the terminal
        "terminal.foreground": "#f3cbee",               // Text colour in the terminal
        "panel.background": "#d9e5fc",                  // Background of the panel
        // xmac "panel.foreground": "#000000",            // Text colour in the panel
        "panel.border": "#858181",                      // Border of the panel
        "panelTitle.activeBorder": "#ce42b7",           // Border of the active panel title
        "panelTitle.activeForeground": "#2c2b2b",       // Text colour of the active panel title
        "panelTitle.inactiveForeground": "#858181",     // Text colour of the inactive panel title
        
        "debugConsole.infoForeground": "#ffffff",       // Text colour of the info in the debug console
        "debugConsole.errorForeground": "#ff0000",      // Text colour of the error in the debug console
        "debugConsole.warningForeground": "#fe8426",    // Text colour of the warning in the debug console
        
        "icon.foreground": "#999393",                   // Colour of the icons in the panel

        // Input - Search/Filter field colours
        "input.background": "#dfe9fb42",                // Background of the input field
        "input.placeholderForeground": "#1d1b2b87",     // Placeholder text colour in the input field
        "input.foreground": "#000000",                  // Text colour in the input field
        "input.border": "#6966689b",                    // Border colour of the input field
        "inputOption.activeBackground": "#f9c5eed2",    // Background of the active input option
        "inputOption.activeBorder": "#ce42b7",          // Border colour of the active input option
        "inputOption.activeForeground": "#000000",      // Text colour of the active input option
        "inputOption.hoverBackground": "#e71fbcd2",     // Background of the hovered input option
        "inputValidation.errorBackground": "#ff0000",   // Background of the error input validation
        // xmac "inputIcon.foreground": "#727070",        // Colour of the input icon

        // Dropdown colours
        "dropdown.background": "#dfe9fb96",             // Background of the dropdown menu
        "dropdown.foreground": "#727070",               // Text colour in the dropdown
        "dropdown.border": "#8581819b",                 // Border colour of the dropdown
        "dropdown.listBackground": "#ffe0f9",           // Background of the dropdown list

        // Left Side: Activity bar
        "activityBar.background": "#161634",            // Background of the activity bar
        "activityBar.foreground": "#def1ff",            // Text colour of the activity bar
        
        "sideBar.background": "#2B2B3B",                // Background of the side bar
        "sideBar.border": "#8d818b",                    // Border of the side bar
        "sideBar.foreground": "#ffffffde",              // Text colour of the side bar
        
        "statusBar.background": "#1c4779",              // Background of the status bar
        "statusBar.foreground": "#ffffff",              // Text colour of the status bar
        "statusBar.noFolderBackground": "#2f79ce",      // Background when no folder is open
        "statusBar.debuggingBackground": "#ffb175",     // Background when debugging
        
        // Tab colours
        "tab.activeBackground": "#222232ae",            // Background of the active tab
        "tab.inactiveBackground": "#2222324a",          // Background of inactive tabs
        "tab.activeForeground": "#ffffff",              // Text colour of the active tab
        "tab.inactiveForeground": "#ffffff8d",          // Text colour of inactive tabs
        "tab.border": "#8d818b",                        // Border between tabs
        "tab.hoverBackground": "#29292e",               // Background when hovering over a tab
        "tab.selectedBackground": "#111119",            // Background of the selected tab
        "tab.hoverBorder": "#db0fb9",                   // Border when hovering over a tab
        "tab.activeModifiedBorder": "#ff1e008c",        // Border of the active modified tab
        "tab.inactiveModifiedBorder": "#ff1e008c",      // Border of the inactive modified tab

        // Path colours
        "breadcrumb.background": "#111119a9",                   // Background of the breadcrumb
        "breadcrumb.foreground": "#888888",                     // Text colour of the breadcrumb
        "breadcrumb.activeSelectionForeground": "#ffe1fd",      // Text colour of the active breadcrumb
        "breadcrumb.focusForeground": "#ffffff",                // Text colour of the focused breadcrumb

        // Title bar colours
        "titleBar.activeBackground": "#1c1c1ed8",       // Background when window is focused
        "titleBar.inactiveBackground": "#3a3a3ed8",     // Background when window is not focused
        "titleBar.activeForeground": "#ededed",         // Text/icon colour when focused
        "titleBar.inactiveForeground": "#ededed",       // Text/icon colour when not focused
        
        // Minimap colours
        "minimap.background": "#f0eeeedd",              // Background of the minimap
        "minimap.selectionHighlight": "#46a8feee",      // Background of the selection highlight in the minimap
        "minimap.findMatchHighlight": "#e9e634fc",      // Background of the find match highlight in the minimap
        "minimap.errorHighlight": "#ff0000",            // Background of the error highlight in the minimap
        "minimap.warningHighlight": "#ffa77b",          // Background of the warning highlight in the minimap
        "minimapGutter.addedBackground": "#00ff00",     // Background of the added lines in the minimap
        "minimapGutter.modifiedBackground": "#fa962c",  // Background of the modified lines in the minimap
        "minimapGutter.deletedBackground": "#ff0000",   // Background of the deleted lines in the minimap
        
        // Notification colours
        "notificationCenter.border": "#858181",                 // Border of the notification center
        "notificationCenterHeader.background": "#fde8f9e3",     // Background of the notification center header
        "notificationCenterHeader.foreground": "#00000097",     // Text colour of the notification center header
        "notificationsErrorIcon.foreground": "#ff0000",         // Text colour of the error icon in notifications

        // Welcome Page & Chat
        "welcomePage.background": "#222232",                   // Background of the welcome page
        
        // Command / Quick Input colours
        "quickInput.background": "#3a3a3ed8",                   // Command palette background
        "quickInput.foreground": "#ffffff",                     // Command palette text
        "quickInputList.focusBackground": "#cde4ffee",          // Background of the focused command palette item
        "quickInputList.focusForeground": "#000000",            // Text colour of the focused command palette item
        
        // Bracket Pairing
        "editorBracketHighlight.foreground1": "#1e26fd",
        "editorBracketHighlight.foreground2": "#ff9191",
        "editorBracketHighlight.foreground3": "#e53970",
        "editorBracketHighlight.foreground4": "#00bfae",
        "editorBracketHighlight.foreground5": "#ff6f00",
        "editorBracketHighlight.foreground6": "#a259c6"
    },
    "tokenColors": [
        {
            "scope": "comment",
            "settings": {
                "foreground": "#0f8633",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#1e26fd"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#ec6ea5"
            }
        },
        {
            "scope": "variable",
            "settings": {
                "foreground": "#1e30a6"
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#45942c"
            }
        },
        {
            "scope": "entity.name.class",
            "settings": {
                "foreground": "#26cead"
            }
        },
        {
            "scope": "entity.name.function",
            "settings": {
                "foreground": "#1a9be6"
            }
        },
        {
            "scope": "storage",
            "settings": {
                "foreground": "#1e26fd"
            }
        },
        {
            "scope": "punctuation",
            "settings": {
                "foreground": "#000000ab"
            }
        }
        ]
    }